<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <com.muen.boxgame.ui.widget.GameView
        android:id="@+id/game_board"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_prv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_prev_level"
            android:textSize="12dp"/>
        <Button
            android:id="@+id/btn_next_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_next_level"
            android:textSize="12dp"/>
        <Button
            android:id="@+id/btn_reset"
            android:text="@string/label_reset_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"/>
        <Button
            android:id="@+id/btn_exit"
            android:text="@string/label_exit_app"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"/>
    </LinearLayout>

</LinearLayout>